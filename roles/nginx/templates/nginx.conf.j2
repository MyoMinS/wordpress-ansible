# Rate limiting
limit_req_zone $binary_remote_addr zone=wp_login:10m rate=1r/s;
limit_req_zone $binary_remote_addr zone=wp_admin:10m rate=5r/s;

server {
        listen {{ nginx_port }};
        root {{ wordpress_dir }};
        index index.php index.html index.htm index.nginx-debian.html;
        server_name {{ domain_name }};
        client_max_body_size 1024M;

        # Gzip compression
        gzip on;
        gzip_vary on;
        gzip_types text/plain text/css application/json application/javascript text/xml application/xml text/javascript;

        # Security headers
        add_header X-Frame-Options "SAMEORIGIN" always;
        add_header X-XSS-Protection "1; mode=block" always;
        add_header X-Content-Type-Options nosniff always;
        add_header Referrer-Policy "strict-origin-when-cross-origin" always;
        add_header Permissions-Policy "geolocation=(), microphone=(), camera=()" always;

        # Remove the server header
        server_tokens off;

        # 504 Gateway Timeout fix
        proxy_connect_timeout       600;
        proxy_send_timeout          600;
        proxy_read_timeout          600;
        send_timeout                600;

        access_log /var/log/nginx/access.log;
        error_log /var/log/nginx/error.log;

        location / {
                try_files $uri $uri/ /index.php?$args;
        }

        location ~ \.php$ {
                try_files $uri =404;
                fastcgi_split_path_info ^(.+\.php)(/.+)$;
                fastcgi_index index.php;
                fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
                include fastcgi_params;
                fastcgi_pass unix:/var/run/php/php{{ php_version }}-fpm.sock;
                fastcgi_read_timeout 300;
        }

        location = /favicon.ico {
                log_not_found off;
                access_log off;
        }

        location = /robots.txt {
                log_not_found off;
                access_log off;
        }

        # Block hidden files
        location ~ /\. {
            deny all;
        }

        # Block PHP in uploads
        location ~* /(?:uploads|files)/.*\.php$ {
            deny all;
        }

        # Block XML-RPC (common attack vector)
        location = /xmlrpc.php {
                deny all;
        }

        # Block WordPress sensitive files
        location ~* /(wp-config\.php|readme\.html|license\.txt|install\.php) {
                deny all;
        }

        # Static asset caching
        location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
                expires 1y;
                add_header Cache-Control "public, immutable" always;
                access_log off;
        }

        # Rate limit login attempts
        location ~ ^/(wp-login\.php|wp-admin/) {
                limit_req zone=wp_login burst=3 nodelay;
                try_files $uri $uri/ /index.php?$args;
        }

        # Block wp-content access to PHP files
        location ~* ^/wp-content/.*\.(php|phtml)$ {
                deny all;
        }

        location /status {
                stub_status;
                allow 127.0.0.1;
                deny all;
        }

}
